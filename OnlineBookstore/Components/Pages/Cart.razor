@page "/cart"
@using OnlineBookstore.Domain.Entities
@using OnlineBookstore.Infrastructure.Services
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject CartService CartService
@rendermode InteractiveServer

<PageTitle>Your Shopping Cart</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6"><i class="bi bi-cart3"></i> Shopping Cart</h1>
        <a href="/books" class="btn btn-outline-primary">Back to Books</a>
    </div>

    @if (!CartService.CartEntries.Any())
    {
        <div class="text-center py-5 border rounded bg-light shadow-sm">
            <i class="bi bi-cart-x display-1 text-muted"></i>
            <h3 class="mt-3">Your cart is empty</h3>
            <p class="text-muted">Looks like you haven't picked any books yet!</p>
            <a href="/books" class="btn btn-primary mt-3">Start Shopping</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                @foreach (var entry in CartService.CartEntries)
                {
                    <div class="card mb-3 shadow-sm border-0 bg-white">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-2">
                                    <img src="@entry.Item.Book?.ImageLink" class="img-fluid rounded"
                                         onerror="this.src='/favicon.png';" />
                                </div>

                                <div class="col-5">
                                    <h5 class="mb-1">@entry.Item.Book?.Title</h5>
                                    <span class="badge @(entry.SelectedFormat == "Physical" ? "bg-primary" : "bg-success")">
                                        @entry.SelectedFormat
                                    </span>
                                </div>

                                <div class="col-3 text-center">
                                    @{
                                        // Dynamic price calculation from the Book entity
                                        double unitPrice = entry.SelectedFormat == "Physical"
                                        ? (entry.Item.Book?.PricePhysical ?? 0)
                                        : (entry.Item.Book?.PriceSoftcopy ?? 0);
                                        decimal displayPrice = (decimal)unitPrice; // Fixes CS0266
                                    }
                                    <div class="fw-bold">@displayPrice.ToString("C")</div>
                                    <div class="small text-muted">Qty: @entry.Item.Quantity</div>
                                </div>

                                <div class="col-2 text-end">
                                    <button class="btn btn-outline-danger btn-sm"
                                            @onclick="() => CartService.RemoveFromCart(entry.Item.BookId, entry.SelectedFormat)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="col-md-4">
                <div class="card shadow border-0 p-3">
                    <h4 class="mb-4">Order Summary</h4>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Total Items:</span>
                        <span>@CartService.GetCount()</span>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between mb-4">
                        <span class="h5">Total:</span>
                        <span class="h5 text-primary fw-bold">@CartService.GetTotal().ToString("C")</span>
                    </div>

                    <button class="btn btn-success btn-lg w-100 fw-bold shadow-sm mb-2">
                        Proceed to Checkout
                    </button>

                    <button class="btn btn-link text-muted btn-sm w-100" @onclick="CartService.ClearCart">
                        Clear All Items
                    </button>
                </div>
            </div>
        </div>
    }
</div>
