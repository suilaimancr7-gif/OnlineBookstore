@page "/books"
@using OnlineBookstore.Domain.Entities
@using OnlineBookstore.Infrastructure.Contracts
@inject IGenericRepository<Book> BookRepo
@implements IDisposable

<PageTitle>Books</PageTitle>

<h1>Books</h1>

<p>
    <a href="books/create" class="btn btn-primary">Create New</a>
</p>

<div class="input-group mb-3">
    <input type="text" class="form-control" placeholder="Search by Title or Author..."
           @bind="SearchTerm" @bind:event="oninput" @onkeyup="HandleSearch" />
    <button class="btn btn-outline-secondary" type="button" @onclick="HandleSearch">Search</button>
</div>

@if (FilteredBooks == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Cover</th>
                <th>Title</th>
                <th>ISBN</th>
                <th>Price (Physical)</th>
                <th>Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in FilteredBooks)
            {
                <tr>
                    <td>
                        <img src="@book.ImageLink" alt="Cover" style="width: 60px; height: auto;"
                             onerror="this.src='/favicon.png';" />
                    </td>
                    <td>@book.Title</td>
                    <td>@book.ISBN</td>
                    <td>@book.PricePhysical.ToString("C")</td>
                    <td>@book.StockQuantity</td>
                    <td>
                        <a href="@($"books/edit?id={book.Id}")" class="btn btn-warning btn-sm">Edit</a> |
                        <a href="@($"books/details?id={book.Id}")" class="btn btn-info btn-sm">Details</a> |
                        <a href="@($"books/delete?id={book.Id}")" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Book>? AllBooks;
    private List<Book>? FilteredBooks;
    private string SearchTerm = "";

    protected override async Task OnInitializedAsync()
    {
        // Fetch books including related data like Author/Genre if needed
        AllBooks = (await BookRepo.GetAll()).ToList();
        FilteredBooks = AllBooks;
    }

    private void HandleSearch()
    {
        if (string.IsNullOrWhiteSpace(SearchTerm))
        {
            FilteredBooks = AllBooks;
        }
        else
        {
            FilteredBooks = AllBooks?.Where(b =>
                (b.Title?.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ?? false) ||
                (b.ISBN?.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ?? false)
            ).ToList();
        }
    }

    public void Dispose()
    {
        // Cleanup if necessary
    }
}
