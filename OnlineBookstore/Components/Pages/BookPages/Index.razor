@page "/books"
@using OnlineBookstore.Domain.Entities
@using OnlineBookstore.Infrastructure.Contracts
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@attribute [Authorize]
@rendermode InteractiveServer
@inject IGenericRepository<Book> BookRepo
@inject NavigationManager NavigationManager

<PageTitle>Book Inventory</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Book Collection</h1>

    <div class="d-flex align-items-center">
        <AuthorizeView>
            <Authorized>
                <span class="badge bg-info text-dark me-3 p-2">Status: @(context.User.IsInRole("Admin") || context.User.IsInRole("Administrator") ? "Admin" : "User")</span>
                <form action="Account/Logout" method="post">
                    <AntiforgeryToken />
                    <button type="submit" class="btn btn-outline-danger btn-sm">Logout</button>
                </form>
            </Authorized>
        </AuthorizeView>
    </div>
</div>

<hr />

<AuthorizeView Roles="Admin, Administrator">
    <p><a href="books/create" class="btn btn-primary shadow-sm mb-3">Create New Book</a></p>
</AuthorizeView>

<div class="input-group mb-3 shadow-sm">
    <input type="text" class="form-control" placeholder="Search Title or ISBN..."
           @bind="SearchTerm" @bind:event="oninput" @onkeyup="HandleSearch" />
    <button class="btn btn-primary" type="button" @onclick="HandleSearch">Search</button>
</div>

@if (FilteredBooks == null)
{
    <div class="text-center p-5">
        <div class="spinner-border text-primary" role="status"></div>
    </div>
}
else
{
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover align-middle bg-white">
            <thead class="table-dark">
                <tr>
                    <th>Cover</th>
                    <th>Title</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in FilteredBooks)
                {
                    <tr>
                        <td><img src="@book.ImageLink" style="width: 50px; height: 75px; object-fit: cover;" onerror="this.src='/favicon.png';" /></td>
                        <td class="fw-bold">@book.Title</td>
                        <td>@book.PricePhysical.ToString("C")</td>
                        <td>
                            <span class="badge @(book.StockQuantity <= 5 ? "bg-danger" : "bg-success")">
                                @book.StockQuantity
                            </span>
                        </td>
                        <td class="text-center">
                            <div class="btn-group">
                                <a href="@($"books/details?id={book.Id}")" class="btn btn-outline-info btn-sm">Details</a>

                                <AuthorizeView Roles="Admin, Administrator">
                                    <a href="@($"books/edit?id={book.Id}")" class="btn btn-outline-warning btn-sm mx-1">Edit Stock</a>
                                    <a href="@($"books/delete?id={book.Id}")" class="btn btn-outline-danger btn-sm">Delete</a>
                                </AuthorizeView>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private List<Book>? AllBooks;
    private List<Book>? FilteredBooks;
    private string SearchTerm = "";

    protected override async Task OnInitializedAsync()
    {
        var data = await BookRepo.GetAll();
        AllBooks = data.ToList();
        FilteredBooks = AllBooks;
    }

    private void HandleSearch()
    {
        if (string.IsNullOrWhiteSpace(SearchTerm)) FilteredBooks = AllBooks;
        else
        {
            FilteredBooks = AllBooks?.Where(b =>
                (b.Title?.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ?? false) ||
                (b.ISBN?.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ?? false)
            ).ToList();
        }
    }
}
