@page "/books"
@using OnlineBookstore.Domain.Entities
@using OnlineBookstore.Infrastructure.Contracts
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@attribute [Authorize]
@inject IGenericRepository<Book> BookRepo
@inject NavigationManager NavigationManager

<PageTitle>Book Collection</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Book Collection</h1>

    <div class="d-flex align-items-center">
        <AuthorizeView>
            <Authorized>
                <span class="badge bg-info text-dark me-3 p-2">Logged in as: @context.User.Identity?.Name</span>

                @* Logout button leads back to Login via Program.cs MapPost *@
                <form action="Account/Logout" method="post">
                    <AntiforgeryToken />
                    <button type="submit" class="btn btn-outline-danger">Logout</button>
                </form>
            </Authorized>
        </AuthorizeView>
    </div>
</div>

<hr />

@* ONLY Admin can see the Create button *@
<AuthorizeView Roles="Administrator">
    <p>
        <a href="books/create" class="btn btn-primary shadow-sm mb-3">Create New Book</a>
    </p>
</AuthorizeView>

<div class="input-group mb-3 shadow-sm">
    <input type="text" class="form-control" placeholder="Search by Title or ISBN..."
           @bind="SearchTerm" @bind:event="oninput" @onkeyup="HandleSearch" />
    <button class="btn btn-primary" type="button" @onclick="HandleSearch">Search</button>
</div>

@if (FilteredBooks == null)
{
    <div class="text-center p-5">
        <div class="spinner-border text-primary" role="status"></div>
        <p class="mt-2">Fetching your books...</p>
    </div>
}
else
{
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover align-middle bg-white">
            <thead class="table-dark">
                <tr>
                    <th>Cover</th>
                    <th>Title</th>
                    <th>ISBN</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in FilteredBooks)
                {
                    <tr>
                        <td>
                            <img src="@book.ImageLink" class="rounded shadow-sm"
                                 style="width: 50px; height: 75px; object-fit: cover;"
                                 onerror="this.src='/favicon.png';" />
                        </td>
                        <td class="fw-bold">@book.Title</td>
                        <td class="text-muted">@book.ISBN</td>
                        <td>@book.PricePhysical.ToString("C")</td>
                        <td>@book.StockQuantity</td>
                        <td class="text-center">
                            <div class="btn-group">
                                @* Regular Users (Sarah) only see Details *@
                                <a href="@($"books/details?id={book.Id}")" class="btn btn-outline-info btn-sm">Details</a>

                                @* ONLY Admin can see Edit and Delete *@
                                <AuthorizeView Roles="Administrator">
                                    <a href="@($"books/edit?id={book.Id}")" class="btn btn-outline-warning btn-sm mx-1">Edit</a>
                                    <a href="@($"books/delete?id={book.Id}")" class="btn btn-outline-danger btn-sm">Delete</a>
                                </AuthorizeView>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private List<Book>? AllBooks;
    private List<Book>? FilteredBooks;
    private string SearchTerm = "";

    protected override async Task OnInitializedAsync()
    {
        // Pulls data via Repository pattern
        var data = await BookRepo.GetAll();
        AllBooks = data.ToList();
        FilteredBooks = AllBooks;
    }

    private void HandleSearch()
    {
        if (string.IsNullOrWhiteSpace(SearchTerm))
        {
            FilteredBooks = AllBooks;
        }
        else
        {
            FilteredBooks = AllBooks?.Where(b =>
                (b.Title?.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ?? false) ||
                (b.ISBN?.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ?? false)
            ).ToList();
        }
    }
}
