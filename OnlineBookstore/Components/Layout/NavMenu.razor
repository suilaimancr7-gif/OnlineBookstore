@implements IDisposable
@inject OnlineBookstore.Infrastructure.Services.CartService CartService

<div class="top-row ps-3 navbar navbar-dark d-flex align-items-center justify-content-between">
    <div class="container-fluid d-flex align-items-center justify-content-between w-100">

        <div class="d-flex align-items-center">
            <AuthorizeView>
                <Authorized>
                    <form action="Account/Logout" method="post">
                        <AntiforgeryToken />
                        <button type="submit" class="btn btn-outline-danger btn-sm border-0">
                            <i class="bi bi-box-arrow-left fs-5"></i> Logout
                        </button>
                    </form>
                </Authorized>
            </AuthorizeView>
        </div>

        <a class="navbar-brand fw-bold m-0" href="">OnlineBookstore</a>

        <div class="d-flex align-items-center pe-2">
            <AuthorizeView>
                <Authorized>
                    <a href="cart" class="btn btn-outline-light position-relative border-0 p-1">
                        <i class="bi bi-cart3 fs-4"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
                              style="font-size: 0.65rem;">
                            @CartService.GetCount()
                        </span>
                    </a>
                </Authorized>
            </AuthorizeView>
        </div>

    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        @* Public Links *@
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="books">
                <span class="bi bi-book-fill" aria-hidden="true" style="margin-right: 10px;"></span> Books
            </NavLink>
        </div>

        @* Admin Management Links (Supports both Role names) *@
        <AuthorizeView Roles="Admin, Administrator">
            <Authorized>
                <hr class="text-white mx-3" />
                <div class="nav-item px-3 text-white-50 small ms-3">ADMIN TOOLS</div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admins">
                        <span class="bi bi-person-badge-fill" aria-hidden="true" style="margin-right: 10px;"></span> Admin CRUD
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="orders">
                        <span class="bi bi-receipt-cutoff" aria-hidden="true" style="margin-right: 10px;"></span> View All Orders
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="books/create">
                        <span class="bi bi-plus-square-fill" aria-hidden="true" style="margin-right: 10px;"></span> Add New Book
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        @* Standard User Links *@
        <AuthorizeView Roles="User">
            <Authorized>
                @* Only show 'My History' if the user is NOT an admin to prevent UI clutter *@
                @if (!context.User.IsInRole("Admin") && !context.User.IsInRole("Administrator"))
                {
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="orders">
                            <span class="bi bi-clock-history" aria-hidden="true" style="margin-right: 10px;"></span> My Order History
                        </NavLink>
                    </div>
                }
            </Authorized>
        </AuthorizeView>

    </nav>
</div>

@code {
    protected override void OnInitialized()
    {
        CartService.OnCartChanged += StateHasChanged;
    }

    public void Dispose()
    {
        CartService.OnCartChanged -= StateHasChanged;
    }
}